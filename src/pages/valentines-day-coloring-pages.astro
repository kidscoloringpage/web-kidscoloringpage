---
import { colorSheetApi } from '../api/color-sheet';
import GuestLayout from '../layouts/GuestLayout.astro';
import { ColoringImage } from '../components/ColoringImage';
import { Pagination } from '../components/Global/Pagination';

const page = +(Astro.url.searchParams.get('page') || 1);
const { response: coloringPages } = await colorSheetApi(
  Astro as any,
).publicColoringPages({
  page,
  search: 'valentines-day',
});
const perPage = coloringPages?.perPage || 0;
const totalRecords = coloringPages?.totalCount || 0;
---

<GuestLayout
  title='Free Valentines Day Printable Coloring Pages | KidsColoringPage.com'
  permalink='/valentines-day-coloring-pages'
>
  <div class='bg-[#FFF2DF]'>
    <div class='px-responsive container px-4 py-8 md:px-0 md:py-12'>
      <h1 class='mb-5 font-sansita text-4xl font-bold'>
        Free Dinosaur Printable Coloring Pages
      </h1>
      <p class='mb-8 text-xl font-light text-[#545454]'>
        If you're a kid excited about love and friendship, an adult looking for
        a heartwarming activity, or a teacher in need of affectionate
        educational materials, we have something special for you. Dive into our
        collection of free Valentine's Day coloring pages. From sweet hearts and
        cute animals exchanging valentines, to lovely scenes that celebrate love
        and care, a world of warmth and affection awaits your colors. Just a
        click, and you can start spreading the joy and love of Valentine's Day
        through your creative expressions.
      </p>

      <div class='max-auto'>
        <div class='grid grid-cols-2 gap-4 md:grid-cols-4'>
          {
            coloringPages?.data?.map((colorPage, index) => (
              <ColoringImage
                client:load
                src={colorPage?.url}
                title={colorPage?.prompt}
                alt={`valentines-day-${index}`}
              />
            ))
          }
        </div>
        <Pagination
          currentPage={page}
          perPage={perPage}
          totalRecords={totalRecords}
        />
      </div>
    </div>
  </div>
</GuestLayout>
