  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/apricot.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/avocado.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/banana.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/blackberry.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/blueberries.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/cherries.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/dates.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/elderberries.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/fig.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/grapefruit.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/grapes.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/guava.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/kiwis.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/lemons.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/mango.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/nectarines.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/oranges.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/papaya.png',
  'https://kidscoloringpage.s3.eu-west-1.amazonaws.com/fruits/peach.png',
